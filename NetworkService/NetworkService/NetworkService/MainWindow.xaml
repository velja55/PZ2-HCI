<Window x:Class="NetworkService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkService"
        xmlns:viewModel="clr-namespace:NetworkService.ViewModel"
        xmlns:views="clr-namespace:NetworkService.Views"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000"
        Background="Gray"
        
        >
    <Window.DataContext>
        <viewModel:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:TableViewModel}">
            <views:TableView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:GridViewModel}">
            <views:GridView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:GraphViewModel}">
            <views:GraphView/>
        </DataTemplate>
    </Window.Resources>
   
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="Black" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Margin="10" Name="HomeButton" Command="{Binding NavCommand}" CommandParameter="home">
                <StackPanel Orientation="Vertical">
                    <fa5:FontAwesome Icon="Solid_Home" FontSize="25"/>
                    <TextBlock Text="Home" FontSize="15" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <Button Margin="10" Name="TableButton" Grid.Row="1" Command="{Binding NavCommand}" CommandParameter="table">
                <StackPanel Orientation="Vertical">
                    <fa5:FontAwesome Icon="Solid_Table" FontSize="25"/>
                    <TextBlock Text="Table" FontSize="15" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <Button Margin="10" Name="GridButton" Grid.Row="2" Command="{Binding NavCommand}" CommandParameter="grid">
                <StackPanel Orientation="Vertical">
                    <fa5:FontAwesome Icon="Solid_Th" FontSize="25"/>
                    <TextBlock Text="Grid" FontSize="15" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button Margin="10" Name="GraphButton" Grid.Row="3" Command="{Binding NavCommand}" CommandParameter="graph">
                <StackPanel Orientation="Vertical">
                    <fa5:FontAwesome Icon="Solid_ChartPie" FontSize="25"/>
                    <TextBlock Text="Graph" FontSize="15" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button Margin="10" Name="HelpButton" Grid.Row="4">
                <StackPanel Orientation="Vertical">
                    <fa5:FontAwesome Icon="Solid_Question" FontSize="25"/>
                    <TextBlock Text="Help" FontSize="15" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Help" FontSize="20" FontWeight="Bold" Margin="10,10,0,0" VerticalAlignment="Center"/>
                <ToggleButton  Content="{Binding ToggleText}" FontSize="15" FontWeight="Bold" Width="60" Height="40" IsChecked="{Binding IsToggled}" Margin="5,12,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <ContentControl Grid.Column="0" Grid.Row="1" Margin="8,3,8,7" Grid.ColumnSpan="{Binding ColspanFrame}" x:Name="ContentControl" Content="{Binding CurrentViewModel}" />
            <TextBlock Text="{Binding Title}" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontWeight="Black"> </TextBlock>
            <StackPanel Background="White" Orientation="Vertical" Grid.Column="1" Grid.Row="1" Margin="7" Width="{Binding HelpWidth}">
                <TextBlock Text="Help" HorizontalAlignment="Center" FontSize="20"  FontWeight="Bold"></TextBlock>
                <ListView ItemsSource="{Binding HelpItems}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="15" Margin="5"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
        
        </Grid>
</Window>
